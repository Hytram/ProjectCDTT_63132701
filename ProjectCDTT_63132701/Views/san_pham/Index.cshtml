@model ProjectCDTT_63132701.Models.HomeIndexViewModel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-SOME_HASH" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+AU+SA:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Home.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</head>

<div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="3000">
            <img src="~/Images/bia1.jpg" alt="Trang Sức Cao Cấp" class="d-block w-100 banner-img">
            <div class="carousel-caption d-flex flex-column align-items-start text-white">
                <h1>WELCOME TO KIM YẾN</h1>
                <p>Thời trang - Độc đáo - Giá trị bền vững</p>

            </div>
        </div>

        <div class="carousel-item" data-bs-interval="3000">
            <img src="~/Images/bia2.jpg" alt="Trang Sức Hiện Đại" class="d-block w-100 banner-img">
            <div class="carousel-caption d-flex flex-column align-items-start text-white">
                <h1>WELCOME TO KIM YẾN</h1>
                <p>Thời trang - Độc đáo - Giá trị bền vững</p>

            </div>
        </div>

        <div class="carousel-item" data-bs-interval="3000">
            <img src="~/Images/bia3.jpg" alt="Trang Sức Sang Trọng" class="d-block w-100 banner-img">
            <div class="carousel-caption d-flex flex-column align-items-start text-white">
                <h1>WELCOME TO KIM YẾN</h1>
                <p>Thời trang - Độc đáo - Giá trị bền vững</p>

            </div>
        </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
</div>

<section class="featured py-5">
    <div class="container">
        <h2 class="text-center mb-4">MUA SẮM THEO DANH MỤC</h2>
        <div class="row justify-content-center text-center">
            <div class="col-6 col-md-3 mb-3">
                <a href="/San_pham/Day_Chuyen" class="category-btn w-100 py-3 rounded-pill">Dây chuyền</a>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <a href="/San_pham/Nhan" class="category-btn w-100 py-3 rounded-pill">Nhẫn</a>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <a href="/San_pham/Bong_Tai" class="category-btn w-100 py-3 rounded-pill">Bông tai</a>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <a href="/San_pham/Lac_Tay" class="category-btn w-100 py-3 rounded-pill">Lắc tay</a>
            </div>
        </div>
    </div>
</section>

<section class="trendy-collection py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">BỘ SƯU TẬP MỚI</h2>
        <div class="product-container">
            @foreach (var product in Model.NewestProducts)
            {
                <div class="product-card">
                    <img src="~/Images/@product.AnhSanPham" alt="@product.TenSP">
                    <div class="product-info">
                        <h3>@product.TenSP</h3>
                        <p class="price">@product.DonGia.ToString("N0") đ</p>
                        <a href="@Url.Action("ChiTietSanPham", "San_pham", new { id = product.MaSP })" class="btn-submit">Xem ngay</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<div class="message-box">
    <p> " Không chỉ là một thương hiệu trang sức, chúng tôi là một phong trào đang thực hiện sứ mệnh cách mạng hóa trải nghiệm trang sức. "</p>
</div>


<table class="custom-table">
    <tr>
        <td><img src="~/Images/mau11.jpg" class="table-img" /></td>
        <td class="text-center"><a href="@Url.Action("BaoHanh", "San_pham")">Chính sách bảo hành</a></td>
        <td><img src="~/Images/anh12.jpg" class="table-img" /></td>
        <td class="text-center"><a href="@Url.Action("LoaiBac", "San_pham")">Chất lượng bạc</a></td>
    </tr>
    <tr>
        <td class="text-center"><a href="@Url.Action("ThuongHieu", "San_pham")">Lịch sử thương hiệu</a></td>
        <td><img src="~/Images/shop5.jpg" class="table-img" /></td>
        <td class="text-center">
            <a href="@Url.Action("TTVanChuyen", "San_pham")">Chính sách vận chuyển</a>
        </td>
        <td><img src="~/Images/mau12.jpg" class="table-img" /></td>
    </tr>
</table>

<section class="autumn-collection py-5">
    <div class="container">
        <h2 class="text-center mb-4">BỘ SƯU TẬP MÙA HÈ</h2>
        <div class="product-container">
            @foreach (var product in Model.OldestProducts)
            {
                <div class="product-card">
                    <img src="~/Images/@product.AnhSanPham" alt="@product.TenSP">
                    <div class="product-info">
                        <h3>@product.TenSP</h3>
                        <p class="price">@product.DonGia.ToString("N0") đ</p>
                        <a href="@Url.Action("ChiTietSanPham", "SanPham", new { id = product.MaSP })" class="btn-submit">Xem ngay</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>  







