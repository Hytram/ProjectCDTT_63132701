@model ProjectCDTT_63132701.Models.SanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/details.css" />
</head>

<div class="form-wrapper">
    <a href="javascript:history.back()" class="back-button">
        <i class="fa-solid fa-chevron-left"></i> Quay lại
    </a>
    <h2 class="mb-4">Bạn có chắc chắn muốn xóa sản phẩm này?</h2>

    <div class="row">
        <!-- Ảnh sản phẩm -->
        <div class="col-md-5">
            <img src="~/Content/images/@Model.AnhSanPham" alt="Ảnh sản phẩm" class="img-fluid rounded shadow" style="max-height: 300px;" />
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-7">
            <dl class="row">
                <dt class="col-sm-4">Tên sản phẩm:</dt>
                <dd class="col-sm-8">@Model.TenSP</dd>

                <dt class="col-sm-4">Loại bạc:</dt>
                <dd class="col-sm-8">@Model.LoaiBac</dd>

                <dt class="col-sm-4">Đơn giá:</dt>
                <dd class="col-sm-8">@Model.DonGia.ToString("N0") VNĐ</dd>

                <dt class="col-sm-4">Số lượng:</dt>
                <dd class="col-sm-8">@Model.SoLuong</dd>

                <dt class="col-sm-4">Loại sản phẩm:</dt>
                <dd class="col-sm-8">@Model.LoaiSanPham.TenLoaiSP</dd>
            </dl>
            @using (Html.BeginForm("Delete", "san_pham", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.MaSP)

                <button type="submit" class="btn-submit mt-3 me-2">
                    <i class="fas fa-trash-alt"></i> Xóa
                </button>
                <a href="@Url.Action("QLSP", "san_pham")" class="btn-cancel mt-3">
                    Hủy
                </a>
            }
        </div>
    </div>
</div>
