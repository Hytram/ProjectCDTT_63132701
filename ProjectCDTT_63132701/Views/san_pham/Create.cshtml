@model ProjectCDTT_63132701.Models.SanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/shared/_LayoutAdmin.cshtml";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/Content/create.css" />
</head>

@using (Html.BeginForm("Create", "san_pham", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()

    <div class="form-wrapper">
        <a href="javascript:history.back()" class="back-button">
            <i class="fa-solid fa-chevron-left"></i> Quay lại
        </a>
        <h2 class="form-title">Thêm sản phẩm mới</h2>

        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.TenSP, "Tên sản phẩm :")
                @Html.TextBoxFor(m => m.TenSP, new { @class = "long-input" })

            </div>
        </div>

        <div class="form-row">
            <div class="form-group radio-group">
                @Html.Label("Loại bạc :")
                <label>
                    @Html.RadioButtonFor(m => m.LoaiBac, "Italy") Italy
                </label>
                <label>
                    @Html.RadioButtonFor(m => m.LoaiBac, "Thailand") Thailand
                </label>
            </div>

            <div class="form-group">
                @Html.Label("Ảnh sản phẩm", new { @class = "form-label" })
                <input type="file" name="AnhSanPhamUpload" class="form-control" />


            </div>
        </div>

        <div class="form-row">
            <div class=" form-group">
                @Html.LabelFor(m => m.MaLoaiSP, "Loại sản phẩm :")
                @Html.DropDownListFor(m => m.MaLoaiSP, (SelectList)ViewBag.MaLoaiSP, "-- Chọn danh mục --")
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.SoLuong, "Số lượng :")
                @Html.TextBoxFor(m => m.SoLuong, new { @class = "form-control", @type = "number", @min = "1", @id = "SoLuong" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.DonGia, "Đơn giá :")
                @Html.TextBoxFor(m => m.DonGia, new { @class = "form-control", type = "number", min = "50000", step = "10000" })

            </div>


        </div>

        <button type="submit" class="btn-submit">Thêm sản phẩm</button>
    </div>
}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const donGiaInput = document.getElementById("DonGia");
        const soLuongInput = document.getElementById("SoLuong");

        if (donGiaInput) {
            donGiaInput.addEventListener("input", function () {
                this.value = this.value.replace(/[^0-9]/g, "");
            });
        }

        if (soLuongInput) {
            soLuongInput.addEventListener("input", function () {
                this.value = this.value.replace(/[^0-9]/g, "");
            });
        }
    });
</script>

