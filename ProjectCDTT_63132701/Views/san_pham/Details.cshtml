@model ProjectCDTT_63132701.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; 
}
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/Content/details.css" />
</head>
    <div class="form-wrapper">
    <a href="javascript:history.back()" class="back-button">
        <i class="fa-solid fa-chevron-left"></i> Quay lại
    </a>
    <h2 class="mb-4">Chi tiết sản phẩm</h2>

    <div class="row">
        <div class="col-md-5">
            <img src="~/images/@Model.AnhSanPham" class="img-fluid rounded shadow" alt="Ảnh sản phẩm" />
        </div>
        <div class="col-md-7">
            <dl class="row">
                <dt class="col-sm-4">Tên sản phẩm:</dt>
                <dd class="col-sm-8">@Model.TenSP</dd>

                <dt class="col-sm-4">Mô tả:</dt>
                <dd class="col-sm-8">@Model.MoTa</dd>   

                <dt class="col-sm-4">Đơn giá:</dt>
                <dd class="col-sm-8 price">@String.Format("{0:N0} ₫", Model.DonGia)</dd>


                <dt class="col-sm-4">Số lượng:</dt>
                <dd class="col-sm-8">@Model.SoLuong</dd>

                <dt class="col-sm-4">Loại bạc:</dt>
                <dd class="col-sm-8">@Model.LoaiBac</dd>

                @*<dt class="col-sm-4">Ngày tạo:</dt>
        @(Model.NgayTao.HasValue ? Model.NgayTao.Value.ToString("dd/MM/yyyy") : "")*@

                <dt class="col-sm-4">Loại sản phẩm:</dt>
                <dd class="col-sm-8">
                    @if (Model.LoaiSanPham != null)
                    {
                        @Model.LoaiSanPham.TenLoaiSP
                    }
                    else
                    {
                        <span class="text-muted">Không có thông tin</span>
                    }
                </dd>

            </dl>

            
        </div>
    </div>
</div>
