@model IEnumerable<ProjectCDTT_63132701.Models.van_chuyen>
@{
    ViewBag.Title = "QLDH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>

<h2>Danh sách vận chuyển</h2>
@*<p>
        @Html.ActionLink("Thêm đơn vận chuyển", "Create", null, new { @class = "btn btn-success" })
    </p>*@

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Đơn vị vận chuyển</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th>Ngày giao</th>
            <th>Ngày nhận</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.id_don_hang)</td>
                <td>@Html.DisplayFor(modelItem => item.don_vi_van_chuyen)</td>
                <td>@Html.DisplayFor(modelItem => item.trang_thai)</td>
                <td>@Html.DisplayFor(modelItem => item.ngay_tao)</td>
@*                <td>@Html.DisplayFor(modelItem => item.ngay_giao)</td>
                <td>@Html.DisplayFor(modelItem => item.ngay_nhan)</td>*@
               @* <td>
                    <a href="@Url.Action("ChiTietHoaDon", "SanPhams_64130053", new { id = hoaDon.SoHD })"><i class="fa-solid fa-circle-info"></i></a>
                </td>*@
                <td>
                    <a href="@Url.Action("Details", new { id = item.id })" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.id })" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
