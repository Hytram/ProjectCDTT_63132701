@model IEnumerable<ProjectCDTT_63132701.Models.SanPham>
@{
    ViewBag.Title = "Nhan";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/Content/sanpham.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="breadcrumb-container">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "San_pham")">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Nhẫn Bạc</li>
        </ol>
    </nav>
</div>


<h2>Nhẫn Bạc</h2>

<div class="filter-container">
    <div class="filter-options">
        <label>Bộ lọc:</label>
        <select name="minPrice">
            <option value="">Khoảng giá</option>
            <option value="0-5000000">0 - 5.000.000 VNĐ</option>
            <option value="5000000-10000000">5.000.000 - 10.000.000 VNĐ</option>
        </select>
        <select name="chatLieu">
            <option value="">Chất liệu</option>
            <option value="Bạc Ý">Bạc Ý</option>
            <option value="Bạc Thái">Bạc Thái</option>
        </select>


    </div>

    <div class="sort-container">
        <label>Sắp xếp:</label>
        <select name="sapXep">
            <option value="moi-nhat">Sản phẩm mới nhất</option>
            <option value="gia-cao">Giá cao nhất</option>
            <option value="gia-thap">Giá thấp nhất</option>
        </select>
    </div>
    <button type="submit" class="btn btn-light">Lọc</button>
</div>


<div class="product-container">
    @foreach (var sp in Model)
    {
<a href="@Url.Action("ChiTietSanPham", "San_pham", new { id = sp.MaSP, returnUrl = Request.Url.PathAndQuery  })" class="product-card-link">
    <div class="product-card">
        <img src="@Url.Content("~/Images/" + sp.AnhSanPham)" alt="@sp.TenSP">
        <div class="product-info">
            <h3>@sp.TenSP</h3>
            <p class="price">@sp.DonGia.ToString("N0") VNĐ</p>
        </div>
    </div>
</a>

    }
</div>

