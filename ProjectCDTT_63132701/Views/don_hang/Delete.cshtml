@model ProjectCDTT_63132701.Models.DonHang

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/delete.css" />
</head>

<div class="form-wrapper">
    <a href="javascript:history.back()" class="back-button">
        <i class="fa-solid fa-chevron-left"></i> Quay lại
    </a>
    <h2 class="mb-4">Bạn có chắc chắn muốn xóa đơn hàng này?</h2>

    <div class="row">
        <div class="col-md-12">
            <dl class="row">
                <dt class="col-sm-3">Tổng tiền:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TongTien)</dd>

                <dt class="col-sm-3">Trạng thái đơn hàng:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TrangThai)</dd>

                <dt class="col-sm-3">Ngày tạo:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NgayTao)</dd>

                <dt class="col-sm-3">Mã vận đơn:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MaVanDon)</dd>

                <dt class="col-sm-3">Khách hàng:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.KhachHang.HoTen)</dd>

                <dt class="col-sm-3">Trạng thái hóa đơn:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HoaDon.TrangThai)</dd>
            </dl>

            @using (Html.BeginForm("Delete", "don_hang", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.MaDH)

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn-submit">
                        <i class="fas fa-trash-alt"></i> Xóa
                    </button>
                    <a href="@Url.Action("QLDH", "don_hang")" class="btn-cancel">
                        Hủy
                    </a>
                </div>
            }
        </div>
    </div>
</div>
