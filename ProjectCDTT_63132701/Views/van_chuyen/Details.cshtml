@model ProjectCDTT_63132701.Models.VanChuyen

@{
    ViewBag.Title = "Chi tiết vận chuyển";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/Content/create.css" />
</head>

<div class="form-wrapper">
    <a href="javascript:history.back()" class="back-button">
        <i class="fa-solid fa-chevron-left"></i> Quay lại
    </a>
    <h2 class="mb-4">Chi tiết vận chuyển</h2>

    <div class="row">
        <div class="col-md-12">
            <dl class="row">
                <dt class="col-sm-4">Đơn vị vận chuyển:</dt>
                <dd class="col-sm-8">@Model.DonViVanChuyen</dd>

                <dt class="col-sm-4">Trạng thái:</dt>
                <dd class="col-sm-8">@Model.TrangThai</dd>

                <dt class="col-sm-4">Ngày tạo:</dt>
                <dd class="col-sm-8">
                    @(Model.NgayTao.HasValue ? Model.NgayTao.Value.ToString("dd/MM/yyyy") : "")
                </dd>

                <dt class="col-sm-4">Thời gian giao:</dt>
                <dd class="col-sm-8">
                    @(Model.ThoiGianGiao.HasValue ? Model.ThoiGianGiao.Value.ToString("dd/MM/yyyy") : "")
                </dd>

                <dt class="col-sm-4">Thời gian nhận:</dt>
                <dd class="col-sm-8">
                    @(Model.ThoiGianNhan.HasValue ? Model.ThoiGianNhan.Value.ToString("dd/MM/yyyy") : "")
                </dd>

                <dt class="col-sm-4">Trạng thái đơn hàng:</dt>
                <dd class="col-sm-8">@Model.DonHang?.TrangThai</dd>
            </dl>
        </div>
    </div>

</div>
