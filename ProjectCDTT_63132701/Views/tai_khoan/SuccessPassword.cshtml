
@{
    ViewBag.Title = "SuccessPassword";
    Layout = "~/Views/shared/_LayoutUser.cshtml";
}


<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    /* Token Invalid Page Styles */
    .token-invalid-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #F0D8DD;
        padding: 20px;
    }

        .token-invalid-container h2 {
            color: #d9534f; /* Red color for error */
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
        }

        .token-invalid-container p {
            color: #333;
            font-size: 18px;
            text-align: center;
            margin-bottom: 30px;
        }

        .token-invalid-container .btn-login {
            background-color: #fff;
            color: black;
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .token-invalid-container .btn-login:hover {
                background-color: #D9768C;
                color: #fff;
                border-color: #B7526B;
            }
    </style>
</head>

<body>
    <div class="token-invalid-container">
        <h2>Đặt lại mật khẩu thành công!</h2>
        <p>Bạn có thể sử dụng mật khẩu mới để đăng nhập.</p>
        <a href="@Url.Action("Login", "Tai_khoan")" class="btn-login">Quay lại trang đăng nhập</a>
    </div>
</body>



