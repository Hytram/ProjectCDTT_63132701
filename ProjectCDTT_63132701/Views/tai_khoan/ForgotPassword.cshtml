@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/shared/_LayoutUser.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Content/login.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-left">
            <div class="login-image">
                <img src="~/images/mau29.jpg" alt="trang sức cao cấp" class="img-fluid" />
            </div>
        </div>

        <div class="login-right">
            <div class="login-form-wrapper">
                <h5>QUÊN MẬT KHẨU</h5>

                @using (Html.BeginForm("ForgotPassword", "tai_khoan", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Email:</label>
                        @Html.TextBox("email", null, new { @class = "form-control", placeholder = "Nhập email", required = "required" })
                    </div>

                    <div class="button-container">
                        <button type="submit" class="btn btn-login">Gửi yêu cầu</button>
                    </div>
                }

                @if (ViewBag.Message != null)
                {
                    <p style="color: green">@ViewBag.Message</p>
                }
            </div>
        </div>
    </div>
</div>
