@model ProjectCDTT_63132701.Models.KhachHang
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/shared/_LayoutUser.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Content/login.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-left">
            <div class="login-image">
                <img src="~/images/mau29.jpg" alt="trang sức cao cấp" class="img-fluid" />
            </div>
        </div>
        <div class="login-right">
            <div class="login-form-wrapper">
                <h5>ĐĂNG KÝ TÀI KHOẢN</h5>
                @using (Html.BeginForm("Register", "Tai_khoan", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="hoTen">Họ và tên</label>
                                <input type="text" name="hoTen" class="form-control" id="hoTen" placeholder="Nhập họ tên" required />
                            </div>

                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" name="email" class="form-control" id="email" placeholder="Nhập email" required />
                            </div>
                            <div class="form-group">
                                <label for="matKhau">Mật khẩu</label>
                                <input type="password" name="matKhau" class="form-control" id="matKhau" placeholder="Nhập mật khẩu" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="soDienThoai">Số điện thoại</label>
                                <input type="text" name="soDienThoai" class="form-control" id="soDienThoai" placeholder="Nhập số điện thoại" required />
                            </div>

                            <div class="form-group">
                                <label for="diaChi">Địa chỉ</label>
                                <textarea name="diaChi" class="form-control" id="diaChi" placeholder="Nhập địa chỉ" style="height: 130px; resize: none;"></textarea>
                            </div>


                        </div>
                    </div>
                    <div class="button-container ">
                        <button type="submit" class="btn btn-new">ĐĂNG KÝ</button>
                    </div>
                    if (ViewBag.Message != null)
                    {
                        <div class="alert mt-3">
                            @ViewBag.Message
                        </div>
                    }
                }

                <p> Đã có tài khoản? <a href="/Tai_khoan/Login">Đăng nhập</a></p>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            var message = '@TempData["Message"]';
            if (message) {
                toastr.options = {
                    "closeButton": true,
                    "progressBar": true,
                    "positionClass": "toast-top-right",
                    "timeOut": "4000"
                };
                toastr.success(message);
            }
        });
    </script>
}