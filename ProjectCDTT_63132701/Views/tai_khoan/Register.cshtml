@model ProjectCDTT_63132701.Models.KhachHang
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/shared/_LayoutUser.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Content/login.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</head>

<div class="login-wrapper">
    <div class="login-container">
        <div class="login-left">
            <div class="login-image">
                <img src="~/images/mau29.jpg" alt="trang sức cao cấp" class="img-fluid" />
            </div>
        </div>
        <div class="login-right">
            <div class="login-form-wrapper">
                <h5>ĐĂNG KÝ TÀI KHOẢN</h5>
                @using (Html.BeginForm("Register", "Tai_khoan", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.HoTen, "Họ và tên")
                                @Html.EditorFor(m => m.HoTen, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập họ tên" } })
                                @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, "Email")
                                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập email" } })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.MatKhau, "Mật khẩu")
                                @Html.EditorFor(m => m.MatKhau, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mật khẩu", type = "password" } })
                                @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.SoDienThoai, "Số điện thoại")
                                @Html.EditorFor(m => m.SoDienThoai, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số điện thoại" } })
                                @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.DiaChi, "Địa chỉ")
                                @Html.TextAreaFor(m => m.DiaChi, new { @class = "form-control", placeholder = "Nhập địa chỉ", style = "height: 130px; resize: none;" })
                                @Html.ValidationMessageFor(m => m.DiaChi, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="button-container">
                        <button type="submit" class="btn btn-new">ĐĂNG KÝ</button>
                    </div>
                    if (ViewBag.Message != null)
                    {
                        <div class="alert mt-3">
                            @ViewBag.Message
                        </div>
                    }
                }

                <p> Đã có tài khoản? <a href="/Tai_khoan/Login">Đăng nhập</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            var message = '@TempData["Message"]';
            if (message) {
                toastr.options = {
                    "closeButton": true,
                    "progressBar": true,
                    "positionClass": "toast-bottom-right",
                    "timeOut": "1000"
                };
                toastr.success(message);
                setTimeout(function () {
                    window.location.href = '@Url.Action("Login", "Tai_khoan")';
                }, 1000);
            }
        });
    </script>
}
